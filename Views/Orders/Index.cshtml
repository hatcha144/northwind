@model IEnumerable<NorthwindDatabase.Models.Order>


@{
    ViewBag.Title = "Index";
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}


<h2>Order Information</h2>
@using (Html.BeginForm("Index", "Orders", FormMethod.Get))
{

    <b>Search by Region: </b>
    <br />
    @Html.RadioButton("option", "ShipCity") <text>Ship City</text>
    <br />
    @Html.RadioButton("option", "ShipCountry") <text>Ship Country</text>
    <br />
    @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
    <br />
    <b>Search by Date: </b>
    <br />
    @Html.RadioButton("option", "ShippedDate")<input type="date" name="searchtwo"/>
    <input type="submit" name="submit" value="Search"/>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<form>
    <a href="@Url.Action("LogOut","Login")">LogOut</a>
</form>
<table class="table">
